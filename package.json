{
  "name": "paperhouse",
  "description": "Paperhouse",
  "version": "0.0.2",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "bun --watch ./styles/scripts/setup-styles.ts & next dev",
    "dev:https": "bun --watch ./styles/scripts/setup-styles.ts & next dev --experimental-https",
    "build": "bun run setup:styles && next build",
    "build:analyze": "cross-env SOURCE_MAPS=true bun run build && source-map-explorer .next/static/chunks/*.js",
    "build:profile": "cross-env NEXT_BUILD_PROFILE=true next build",
    "start": "next start",
    "lint": "biome lint --max-diagnostics=200",
    "lint:fix": "biome lint --write --max-diagnostics=200",
    "format": "biome format --write .",
    "analyze": "cross-env ANALYZE=true next build",
    "typecheck": "tsc --noEmit --incremental false",
    "validate:env": "bun ./libs/validate-env.ts",
    "cleanup:integrations": "bun ./libs/cleanup-integrations.ts",
    "setup:styles": "bun ./styles/scripts/setup-styles.ts",
    "lighthouse": "bunx @unlighthouse/cli --site http://localhost:3000",
    "setup:sanity-mcp": "echo -n 'cursor://anysphere.cursor-deeplink/mcp/install?name=Sanity&config=eyJ1cmwiOiJodHRwczovL21jcC5zYW5pdHkuaW8iLCJ0eXBlIjoiaHR0cCJ9Cg==' | pbcopy && echo 'Link copied to clipboard (without newline)' && echo 'Paste this in Cursor or browser address bar'",
    "sanity:schema-extract": "cd integrations/sanity && bun --env-file ../../.env.local sanity schema extract",
    "sanity:typegen": "cd integrations/sanity && bun --env-file ../../.env.local sanity typegen generate && bun biome check --write --unsafe",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@base-ui-components/react": "^1.0.0-beta.4",
    "@hubspot/api-client": "^13.4.0",
    "@portabletext/react": "^4.0.3",
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.4.0",
    "@sanity/asset-utils": "^2.3.0",
    "@sanity/image-url": "^1.2.0",
    "@sanity/visual-editing": "^3.2.4",
    "babel-plugin-react-compiler": "^1.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "gsap": "^3.13.0",
    "hamo": "1.0.0-dev.6",
    "lenis": "^1.3.11",
    "lucide-react": "^0.556.0",
    "next": "16.0.7",
    "next-sanity": "^11.5.6",
    "postprocessing": "^6.37.8",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tempus": "1.0.0-dev.15",
    "three": "^0.180.0",
    "tunnel-rat": "^0.1.2",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.7",
    "@chromatic-com/storybook": "^4.1.3",
    "@csstools/postcss-global-data": "^3.1.0",
    "@next/bundle-analyzer": "16.0.0",
    "@sanity/vision": "^4.11.0",
    "@storybook/addon-a11y": "^10.0.8",
    "@storybook/addon-docs": "^10.0.8",
    "@storybook/addon-onboarding": "^10.0.8",
    "@storybook/addon-vitest": "^10.0.8",
    "@storybook/nextjs": "^10.0.8",
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/postcss": "^4.1.15",
    "@theatre/core": "^0.7.2",
    "@theatre/studio": "^0.7.2",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/bun": "^1.3.0",
    "@types/node": "^24.9.1",
    "@types/react": "19.2.2",
    "@types/three": "^0.180.0",
    "baseline-browser-mapping": "^2.9.3",
    "cross-env": "^10.1.0",
    "lefthook": "^2.0.0",
    "postcss-functions": "^4.0.2",
    "postcss-preset-env": "^10.4.0",
    "sanity": "^4.11.0",
    "source-map-explorer": "^2.5.3",
    "storybook": "^10.0.8",
    "tailwindcss": "^4.1.15",
    "typescript": "^5.9.3"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@tailwindcss/oxide",
    "esbuild",
    "lefthook",
    "sharp"
  ],
  "packageManager": "bun@1.3.0"
}
